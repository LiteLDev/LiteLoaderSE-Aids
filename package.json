{
	"name": "LLScriptHelper",
	"displayName": "LiteLoaderSE-Aids",
	"publisher": "moxicat",
	"description": "Assist in the development of LLScript's plugin",
	"version": "2.1.4",
	"preview": true,
	"icon": "images/icon.png",
	"repository": "https://github.com/LiteLScript-Dev/LiteLoaderSE-Aids",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"LLSE",
		"LiteLoader",
		"BDS"
	],
	"activationEvents": [
		"onCommand:extension.llseaids.config",
		"onCommand:extension.llseaids.docs",
		"onCommand:extension.llseaids.runconsole",
		"workspaceContains:*.js",
		"workspaceContains:*.lua",
		"onStartupFinished",
		"ondebug"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.llseaids.config",
				"title": "LiteLoaderSE-Aids ConfigPanel"
			},
			{
				"command": "extension.llseaids.docs",
				"title": "LiteLoaderSE Docs",
				"icon": "$(file-code)"
			},
			{
				"command": "extension.llseaids.runconsole",
				"title": "Run LiteLoaderBDS",
				"category": "llse",
				"enablement": "!inDebugMode",
				"icon": "$(debug-alt)"
			},
			{
				"command": "extension.llseaids.stopconsole",
				"title": "Stop LiteLoaderBDS",
				"enablement": "!inDebugMode",
				"icon": "$(debug-stop)"
			},
			{
				"command": "extension.llseaids.load",
				"title": "load this file to LiteLoaderBDS",
				"icon": "$(arrow-up)"
			},
			{
				"command": "extension.llseaids.reload",
				"title": "reload this file to LiteLoaderBDS",
				"icon": "$(sync)"
			},
			{
				"command": "extension.llseaids.unload",
				"title": "unload this file to LiteLoaderBDS",
				"icon": "$(arrow-down)"
			},
			{
				"command": "extension.llseaids.clear",
				"title": "clear & reset library config"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == lua || resourceLangId== javascript",
					"command": "extension.llseaids.docs",
					"group": "navigation@6"
				},
				{
					"when": "resourceLangId == javascript && !llse:termianl",
					"command": "extension.llseaids.runconsole",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == lua && !llse:termianl",
					"command": "extension.llseaids.runconsole",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == javascript && llse:termianl",
					"command": "extension.llseaids.unload",
					"group": "navigation@3"
				},
				{
					"when": "resourceLangId == lua && llse:termianl",
					"command": "extension.llseaids.unload",
					"group": "navigation@3"
				},
				{
					"when": "resourceLangId == javascript && llse:termianl",
					"command": "extension.llseaids.load",
					"group": "navigation@2"
				},
				{
					"when": "resourceLangId == lua && llse:termianl",
					"command": "extension.llseaids.load",
					"group": "navigation@2"
				},
				{
					"when": "resourceLangId == javascript && llse:termianl",
					"command": "extension.llseaids.reload",
					"group": "navigation@4"
				},
				{
					"when": "resourceLangId == lua && llse:termianl",
					"command": "extension.llseaids.reload",
					"group": "navigation@4"
				},
				{
					"when": "resourceLangId == javascript && llse:termianl",
					"command": "extension.llseaids.stopconsole",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == lua && llse:termianl",
					"command": "extension.llseaids.stopconsole",
					"group": "navigation@1"
				}
			]
		},
		"configuration": {
			"title": "LLScriptHelper",
			"properties": {
				"extension.llseaids.sourceUrl": {
					"type": "string",
					"default": "default",
					"description": "补全库的源地址",
					"scope": "resource",
					"order": 0
				},
				"extension.llseaids.libraryPath": {
					"type": "string",
					"default": null,
					"description": "补全库的本地存储地址",
					"scope": "resource",
					"order": 1
				},
				"extension.llseaids.javascriptApiPath": {
					"type": "string",
					"default": null,
					"description": "补全库的javascript API地址",
					"scope": "resource",
					"order": 2
				},
				"extension.llseaids.reloadCommand": {
					"type": "string",
					"default": "ll reload \"{fileName}\"",
					"description": "调试器重载指令",
					"scope": "resource",
					"order": 3
				},
				"extension.llseaids.loadCommand": {
					"type": "string",
					"default": "ll load \"{filePath}\"",
					"description": "调试器加载指令",
					"scope": "resource",
					"order": 4
				},
				"extension.llseaids.unloadCommand": {
					"type": "string",
					"default": "ll unload \"{fileName}\"",
					"description": "调试器卸载指令",
					"scope": "resource",
					"order": 5
				},
				"extension.llseaids.bdsPath": {
					"type": "string",
					"default": null,
					"description": "BDS根目录",
					"scope": "resource",
					"order": 6
				},
				"extension.llseaids.autoSplitDocs": {
					"type": "boolean",
					"default": true,
					"description": "打开文档时自动向右分割视图",
					"scope": "resource",
					"order": 7
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/node": "14.x",
		"@types/node-fetch": "^2.6.1",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"@vscode/debugadapter": "^1.57.0",
		"@vscode/webview-ui-toolkit": "^1.0.1",
		"async": "^3.2.0",
		"axios": "^0.27.2",
		"node-fetch": "^2.6.1",
		"node-stream-zip": "^1.15.0",
		"open": "^8.4.0",
		"path": "^0.12.7"
	}
}
